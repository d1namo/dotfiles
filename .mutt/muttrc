set folder      = imaps://imap.gmail.com/
set imap_user   = myusername@gmail.com
set imap_pass   = my_pass
set spoolfile   = +INBOX
mailboxes       = +INBOX
set certificate_file  = ~/.mutt/certificates
set postponed = +[Gmail]/Drafts
unset imap_passive
set mailcap_path 	= ~/.mutt/mailcap
auto_view text/html
#alternative_order text/plain text/html
set imap_keepalive = 300
set copy = no
set record= "+Gmail/Sent\ Items"
unset move
set delete
set beep_new
set smart_wrap
set ssl_starttls = yes
set realname = 'My Name'
set from = $imap_user
set use_from = yes
set smtp_url=smtps://$imap_user:$imap_pass@smtp.gmail.com
set text_flowed = yes 
set sort = threads
set sort_aux = reverse-last-date-received
set date_format = "%d-%m-%y"
set index_format = "[%Z]  %D  %-20.20F  %s" 
set timeout = 30
set pager_index_lines = 3
set pager_context = 3
set pager_stop = yes

# Color Scheme {{{
source ~/.mutt/nord.mutt

bind index <tab>      sync-mailbox
bind pager <down> next-line
bind pager <up> previous-line
bind attach,index,pager \CD next-page
bind attach,index,pager \CU previous-page
bind pager g top
bind pager G bottom
bind attach,index g first-entry
bind attach,index G last-entry
set trash = +[Gmail]/Bin

#macros
macro pager \cb <pipe-entry>'urlview'<enter> 'Follow links with urlview'

# arch mailing lists: https://mailman.archlinux.org/mailman/listinfo/
subscribe arch-dev-public@archlinux.org
subscribe arch-devops@lists.archlinux.org
